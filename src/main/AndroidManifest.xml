<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fr3ts0n.androbd.plugin">

    <!-- to keep service running even when screen is inactive -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name" >

        <activity
            android:name=".mgr.PluginManager"
            android:configChanges="touchscreen|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark"
            />

        <service android:name=".mgr.PluginDataService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
